                    android:textColor="#68B0EE"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblDisc11"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="@string/lblDisc11"
                    android:textColor="#68B0EE"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblDisc12"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="@string/lblDisc12"
                    android:textColor="#68B0EE"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <include layout="@layout/libras_botao"/>
</FrameLayout>