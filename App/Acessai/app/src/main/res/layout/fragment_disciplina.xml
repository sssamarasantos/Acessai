                    android:layout_marginStart="15dp"
                    android:background="@drawable/imgfilo" />

                <ImageButton
                    android:id="@+id/btnImgDisc9"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/imgsocio" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblDisc7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="@string/lblDisc7"
                    android:textColor="#68B0EE"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblDisc8"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="@string/lblDisc8"
                    android:textColor="#68B0EE"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblDisc9"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="@string/lblDisc9"
                    android:textColor="#68B0EE"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
